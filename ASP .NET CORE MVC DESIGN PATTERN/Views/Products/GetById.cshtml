
@{
    ViewData["Title"] = "GetById";
}
@model ProductViewModel


<a class="btn btn-primary mb-3" asp-controller="Products" asp-action="Index">Ürünlere git</a>

<div class="card">
    <div class="card-header">
      Ürün: (@Model.Name)
    </div>
    <div class="card-body">
        <p class="card-text">
            <div>Id : @Model.Id</div>
            <div>Açıklama : @Model.Description</div>
            <div>Fiyat : @Model.Price</div>
            <div>Stok : @Model.Stock</div>
            <div>Renk : @Model.Colour</div>
            <div>Süre : @Model.Expire</div>
        </p>
    </div>
</div>