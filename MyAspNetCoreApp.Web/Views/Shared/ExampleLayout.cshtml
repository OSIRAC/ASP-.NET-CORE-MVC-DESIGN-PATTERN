<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyAspNetCoreApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyAspNetCoreApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    // TRUE OLURSA UYGULAYAN HERKES TANIMLAMAK ZORUNDA KALIR BU LAYOUTU
    @await RenderSectionAsync("HEADER", required: false) // SPESİFİC SECTİONLAR YANİ KODLAR YAZMAMIZI SAĞLAR
   <partial name="HeaderPartialView"></partial>  // PARTİAL VİEWİ BOLE ENTEGRE EDERİZ
    @Html.PartialAsync("HeaderPartialView") // BOLEDE OLABİLİR
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() 
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">           
        </div>
    </footer>
</body>
</html>
